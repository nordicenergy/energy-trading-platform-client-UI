{
    "name": "powerchain-client-ui",
    "version": "1.0.0",
    "private": true,
    "dependencies": {
        "@fortawesome/fontawesome": "1.1.5",
        "@fortawesome/fontawesome-free-regular": "5.0.11",
        "@fortawesome/fontawesome-free-solid": "5.0.9",
        "@fortawesome/react-fontawesome": "0.0.18",
        "async-validator": "1.8.2",
        "axios": "0.19.2",
        "babel-polyfill": "7.8.3",
        "classnames": "2.2.5",
        "focus-manager": "0.4.1",
        "history": "4.7.2",
        "iban": "0.0.11",
        "lodash.once": "4.17.15",
        "lodash.pick": "4.4.0",
        "moment": "2.22.0",
        "normalize.css": "8.0.1",
        "pickmeup": "3.1.3",
        "plotly.js": "1.35.2",
        "prop-types": "15.6.1",
        "react": "16.12.0",
        "react-dom": "16.12.0",
        "react-input-mask": "2.0.4",
        "react-intl": "3.11.0",
        "react-plotly.js": "2.1.0",
        "react-redux": "7.1.3",
        "react-router-dom": "5.1.2",
        "react-scripts": "1.1.1",
        "react-transition-group": "2.3.0",
        "redux": "4.0.5",
        "swiper": "5.3.0",
        "web3": "1.2.5-rc.0"
    },
    "scripts": {
        "analyze": "source-map-explorer build/static/js/main.*",
        "postbuild": "node ./scripts/postcss.js && node ./scripts/generateHtAccess.js",
        "start": "react-scripts start",
        "build": "react-scripts build && npm run postbuild",
        "test": "react-scripts test --no-cache --env=jsdom --coverage src/setupTests.js src/**/*",
        "e2e:desktop": "VIEWPORT=desktop jest --no-cache e2e/**/*",
        "e2e:tv": "VIEWPORT=tv jest --no-cache e2e/**/*",
        "e2e:mobile": "VIEWPORT=mobile jest --no-cache e2e/**/*",
        "e2e:tablet": "VIEWPORT=tablet jest --no-cache e2e/**/*",
        "e2e": "npm run e2e:desktop && npm run e2e:mobile && npm run e2e:tablet",
        "security": "nsp check --reporter table",
        "format": "./node_modules/.bin/prettier --single-quote --write 'src/**/*.{js,jsx,json,css}'",
        "styleguide": "styleguidist server",
        "styleguide:build": "styleguidist build",
        "eject": "react-scripts eject"
    },
    "devDependencies": {
        "enzyme": "3.11.0",
        "enzyme-adapter-react-16": "1.15.2",
        "nsp": "3.2.1",
        "postcss-css-variables": "0.14.0,
        "pre-commit": "1.2.2",
        "pre-push": "0.1.1",
        "prettier": "1.19.1",
        "puppeteer": "2.0.0",
        "react-styleguidist": "10.6.1",
        "react-test-renderer": "16.2.0",
        "redux-mock-store": "1.5.4",
        "source-map-explorer": "2.2.2"
    },
    "pre-commit": [
        "format",
        "test"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/nordicenergy/energy-trading-client-ui"
    },
    "keywords": [
        "powerchain",
        "energy",
        "exchange",
        "blockchain",
        "trading platform",
        "client side",
        "frontend"
    ],
    "author": "Nordic Energy Dev.",
    "license": "CC BY-NC-ND 4.0",
    "engines": {
        "node": ">=6.6.0",
        "npm": ">=3.10.8"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx}",
            "!src/**/index.js",
            "!src/**/setupTests.js",
            "!src/**/dispatcher.js",
            "!src/**/registerServiceWorker.js",
            "!<rootDir>/node_modules/"
        ]
    },
    "proxy": {
        "/api": {
            "target": "https://staging.nordicenergy.io",
            "changeOrigin": true
        }
    }
}
